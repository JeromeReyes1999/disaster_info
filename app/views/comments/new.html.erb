<h1>New comment for Post id<%= @post.id %></h1>
<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>
<%= form_for @comment, url: post_comments_path(@post), method: :post do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>